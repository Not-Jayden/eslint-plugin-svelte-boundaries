{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["dom", "es2020"],
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"sourceMap": true,
		"resolveJsonModule": true,

		"rootDir": "src",
		"outDir": "lib",

		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["tests/**/*"]
}
